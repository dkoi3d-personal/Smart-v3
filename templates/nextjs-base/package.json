{
  "name": "nextjs-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "clean:build": "node scripts/clean-build.js",
    "prebuild": "npm run clean:build",
    "build": "cross-env NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:local:setup": "node scripts/switch-db-provider.js sqlite && dotenv -e .env.local -- prisma generate && dotenv -e .env.local -- prisma db push --force-reset && dotenv -e .env.local -- prisma db seed",
    "db:deploy:setup": "node scripts/switch-db-provider.js postgresql && prisma generate && prisma db push && prisma db seed",
    "db:deploy:push": "node scripts/switch-db-provider.js postgresql && prisma generate && prisma db push",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "next": "14.2.18",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^14",
    "dotenv-cli": "^7.4.2",
    "@types/jest": "^29",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "cross-env": "^7.0.3",
    "jest": "^29",
    "jest-environment-jsdom": "^29",
    "postcss": "^8",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4",
    "tsx": "^4.0.0",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
